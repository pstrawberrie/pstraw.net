---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@components/Hero.svelte";
import PageMenu from "@components/PageMenu.astro";

const {
  pageTitle = "EMPTY",
  heroTitle,
  heroSubtitle,
  heroColor,
  pageMenuLinks = [],
  pageMenuColor = "tertiary",
  currentPage = null,
} = Astro.props;
---

<BaseLayout {pageTitle}>
  <Hero title={heroTitle} subtitle={heroSubtitle} color={heroColor}>
    {
      pageMenuLinks.length > 0 && (
        <PageMenu links={pageMenuLinks} color={pageMenuColor} {currentPage} />
      )
    }
  </Hero>

  <slot />
</BaseLayout>
