{
  "name": "astro",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "npm run dev",
    "dev:astro": "astro dev",
    "dev:web": "nodemon _server/server.js",
    "dev:admin": "nodemon _admin/admin.js",
    "dev": "npm-run-all -l -p dev:astro dev:web dev:admin",
    "build:history": "node _slurpi/scripts/build-history.js",
    "build:astro": "astro build",
    "build": "npm-run-all -l -s build:history build:astro",
    "preview": "astro preview",
    "astro": "astro",
    "slurpi": "node _slurpi/scripts/slurp.js",
    "slurpi-sync": "node _slurpi/scripts/sync-db.js",
    "slurpi-tmdb-dates": "node _slurpi/scripts/tmdb-csv-dates.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "nodemonConfig": {
    "ext": "js,ejs,css,json,env",
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/svelte": "^7.1.0",
    "astro": "^5.12.8",
    "convert-csv-to-json": "^2.50.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "gray-matter": "^4.0.3",
    "helmet": "^8.0.0",
    "lodash-es": "^4.17.21",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "sass": "^1.83.0",
    "sequelize": "^6.37.6",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "svelte": "^5.22.1",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1"
  }
}
